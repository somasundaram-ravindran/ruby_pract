<div class="sign-up-form">
<div class="container">
  <div class ="card-panel">
    <div class="col s12 m12">
      <div class="row center">
      <h1 class="header">Log-in</h1>
    <%= form_for(:logins , html: {class: "col s12" }) do |f| %>
      <div class="row">
        <div class="input-field col-12">
          <%= f.text_field :email ,placeholder: "Enter your email" , autofocus: true%>
          <%= f.label :email, class: "active"%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col-12">
          <%= f.password_field :password , placeholder: "Enter your secret key"%>
          <%= f.label :password, class: "active"%>
        </div>
      </div>
      <span class="left"><%= link_to "new user?",new_student_url%></span>
        <%= f.button ('<i class="material-icons right">arrow_forward</i>Log-in'.html_safe) , :class => 'btn waves-effect waves-light right' %>
    <% end %>
    </div>
    </div>
  </div>
</div>
</div>
