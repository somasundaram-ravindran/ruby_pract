<header>
  <ul id="dropdown1" class="dropdown-content">
    <% if logged_in? %>
    <li><%= link_to 'Profile',student_path(current_user)%></li>
    <% end %>
    <li class="divider"></li>
    <li><%= session_link %></li>
  </ul>
  <ul id="dropdown2" class="dropdown-content">
    <% if logged_in? %>
    <li><%= link_to 'Profile',student_path(current_user)%></li>

    <% end %>
    <li class="divider"></li>
    <li><%= session_link %></li>
  </ul>
    <nav>
      <div class="container">
        <div class="nav-wrapper" >
          <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
          <%= link_to "University" , root_path , class: "brand-logo" %>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><%= link_to "Courses" , root_path %>
            <% if logged_in? %>
            <li><%= link_to "Students", students_path%></li>
            <% end %>
            <li><a class="dropdown-trigger" href="#" data-target="dropdown1">About<i class="material-icons right">arrow_drop_down</i></a></li>
          </ul>
          <ul class="sidenav" id="mobile-demo">
            <li><%= link_to "Courses" , root_path %>
              <% if logged_in? %>
              <li><%= link_to "Students", students_path%></li>
              <% end %>
            <li><a class="dropdown-trigger" href="#" data-target="dropdown2">About<i class="material-icons right">arrow_drop_down</i></a></li>
          </ul>
        </div>
      </div>
    </nav>
    <% flash.each do |key,message| %>
      <div class="container">
        <div class ="card-panel green" id = "fade-out-target">
          <div class="col s12">
            <div class="row center">
              <span class="white-text"><%= message %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</header>
