<div class="col s12">
  <h1 class="center-align">super mario world</h1>
  <h1 class="left-align">Students</h1>
</div>
<div class="container">
  <div class="row">
      <% @students.each do |course| %>
        <div class="col s12 m6 center-align">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Name : <%= course.name %></span><br>
              e-mail :  <%= course.email %><br><br>
            </div>
            <div class="card-action">
              <%= link_to "Profile Info", student_path(course) %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
