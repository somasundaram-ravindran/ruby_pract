<div class="col s12">
  <h1 class="center-align">hello world</h1>
  <h1 class="left-align">Students</h1>
</div>
<div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name : <%= @student.name %></span><br>
          e-mail :  <%= @student.email %><br><br>
          <p> Enrollments :</p><br>
          <ul>
          <% if @student.course.empty? %>
            <p>None</p>
          <% else %>
            <% @student.course.each do |course|%>
            <div class="card blue-grey">
              <div class="card-content white-text">
                <div class= "row">
                  <span><%= course.name %></span>
                  <%= link_to '<i class="material-icons right">clear</i>disenroll'.html_safe, course_disenroll_path( course_id: course.id), method: :post, class: "waves-effect waves-light btn right" %>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
          </ul>
        </div>
        <% if current_user == @student %>
          <div class="card-action">
            <%= link_to '<i class="material-icons right">create</i> Edit profile'.html_safe , edit_student_path(@student) , class: "waves-effect waves-light btn"%>
          </div>
        <% end %>
        </div>
    </div>
</div>
