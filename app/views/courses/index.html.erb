<div class="col s12">
  <h1 class="center-align">hello world</h1>
  <h1 class="left-align">Courses</h1>
</div>
<div class="row">
    <% @course.each do |course| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Code : <%= course.short_name %></span><br>
          Name : <%= course.name %><br><br>
          Description:<br><br><p> <%= course.description %></p>
        </div>
        <div class="card-action">
          <% if logged_in? %>
            <%= link_to "Students" , students_path(course_id: course.id)%>
            <% if !(current_user.course.include?(course))%>
              <%= link_to "Enroll" , course_enroll_path( course_id: course.id), method: :post%>
            <% end %>
          <% end %>
          <%= link_to "Know more" , students_path(course_id: course.id)%>
        </div>
      </div>
    </div>
    <% end %>
</div>
